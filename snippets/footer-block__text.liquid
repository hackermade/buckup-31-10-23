<div class="{% if block.settings.title != blank %}sf__accordion-content{% endif %} sf__footer-block-content">
    <div class="pb-5 md:pb-0 img-socials-group">
        {% if block.settings.image != blank %}
            <div class="mb-5 footer-logo" style="max-width: {{ block.settings.image_max }}">
                {% render 'responsive-image', image: block.settings.image %}
            </div>
        {% endif %}
        {% if block.settings.description != blank %}
            <div class="mt-0{% if block.settings.title != blank %} md:mt-4{% endif %} block-text">
                {{ block.settings.description }}
            </div>
        {% endif %}

        <!-- {% if block.settings.show_social_text %}
            <div class="block -mx-4 mt-4">{% render 'social-media-links' %}</div>
        {% endif %} -->

        {% if show_label == nil %}
            {% assign show_label = false %}
        {% endif %}
        {% if size == nil %}
            {%- assign size = 'small' -%}
        {% endif %}
        <div class="social-media-links {{ box_size }} flex items-center px-2 {% if centermd %} md:justify-center {% endif %}">
            {% if settings.social_pinterest_link != blank %}
                <a target="_blank" class="px-2 flex items-center" href="{{ settings.social_pinterest_link }}" rel="noreferrer">
                    {% render 'icon', name: 'pinterest', size: size %}
                    {% if settings.social_pinterest_label != blank and show_label %}
                        <span class="pl-2.5 pr-4">{{ settings.social_pinterest_label }}</span>
                    {% endif %}
                </a>
            {% endif %}
            {% if settings.social_facebook_link != blank %}
